<?xml version="1.0" encoding="UTF-8"?>
<!-- 
  Progress Report Template
  Agents should copy this template and fill in their progress
  Save as: agent-[A/B/C]-progress-wave-[N]-[timestamp].xml
-->
<progress_report agent="[A/B/C]" wave="[1-5]" timestamp="[ISO_8601]">
  <!-- Current Tasks -->
  <tasks>
    <task>
      <task_id>FROM_WAVE_PLAN</task_id>
      <title>Task Title</title>
      <status>not_started|in_progress|completed|blocked</status>
      <completion_percentage>0-100</completion_percentage>
      <started_at>ISO_8601</started_at>
      <completed_at>ISO_8601_or_empty</completed_at>
    </task>
    <!-- Add more tasks as needed -->
  </tasks>
  
  <!-- Current Activity -->
  <current_activity>
    Detailed description of what you're working on right now
  </current_activity>
  
  <!-- Completed Items -->
  <completed_items>
    <item>Created authentication service</item>
    <item>Set up database connection</item>
    <!-- List completed subtasks -->
  </completed_items>
  
  <!-- Blockers -->
  <blockers>
    <blocker priority="high|medium|low">
      <description>What's blocking you</description>
      <needed_from>Which agent or what resource</needed_from>
      <impact>How this affects your progress</impact>
    </blocker>
    <!-- Add more blockers if any -->
  </blockers>
  
  <!-- Integration Points -->
  <integration_status>
    <integration>
      <component>Component name</component>
      <status>ready|in_progress|not_started</status>
      <notes>Any integration notes</notes>
    </integration>
  </integration_status>
  
  <!-- Next Steps -->
  <next_steps>
    <step priority="1">Next immediate action</step>
    <step priority="2">Following action</step>
    <!-- List your next planned actions -->
  </next_steps>
  
  <!-- Questions for Orchestrator -->
  <questions>
    <question>Any clarifications needed?</question>
    <!-- Add any questions -->
  </questions>
  
  <!-- Files Modified -->
  <files_modified>
    <file action="created|modified|deleted">path/to/file.ts</file>
    <!-- List all files you've worked on -->
  </files_modified>
  
  <!-- Quality Checklist -->
  <quality_checks>
    <check name="tests_written" status="yes|no|partial"/>
    <check name="types_defined" status="yes|no|partial"/>
    <check name="docs_updated" status="yes|no|partial"/>
    <check name="integration_tested" status="yes|no|partial"/>
  </quality_checks>
</progress_report>