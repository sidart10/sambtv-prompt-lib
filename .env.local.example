# Copy this file to .env.local and fill in your values

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here # Generate with: openssl rand -base64 32

# Google OAuth (for SambaTV employee authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# AI Model API Keys
GOOGLE_GEMINI_API_KEY=your-gemini-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENROUTER_API_KEY=your-openrouter-api-key

# Email Configuration (optional)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@samba.tv
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@samba.tv

# Langfuse Integration (NEW - Replacing Phoenix)
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key # Get from https://cloud.langfuse.com
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key # Get from https://cloud.langfuse.com
LANGFUSE_BASE_URL=https://cloud.langfuse.com # Or your self-hosted URL

# Feature Flags
NEXT_PUBLIC_LANGFUSE_ENABLED=false # Set to true when ready to enable Langfuse features